# EditorConfig helps maintain consistent coding styles across editors
# https://editorconfig.org/

root = true

# Default settings for all files
[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 2
trim_trailing_whitespace = true
insert_final_newline = true
max_line_length = 100

# Markdown files
[*.md]
trim_trailing_whitespace = false

# YAML files - prefer single quotes
[*.{yml,yaml}]
indent_size = 2
quote_type = single  # Custom property, supported by some editors/plugins

# JavaScript/TypeScript files - prefer single quotes
[*.{js,jsx,ts,tsx}]
indent_size = 2
quote_type = single  # Custom property, supported by some editors/plugins

# NOTE: The 'quote_type' property is not a standard EditorConfig property,
# but is supported by some editor plugins. For full single quote support,
# please also use a .prettierrc file with "singleQuote": true
